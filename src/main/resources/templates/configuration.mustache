{{$content}}  	    
<div class="container-fluid">
	<div class="row">
			<h2>Configuration</h2>
			<h3>Connected Triplestore</h3>
				<div class="form-group">
					<label for="jena_tdb_directory">jena_tdb_directory:</label>
					<input class="form-control" type="text" id="jena_tdb_directory" value="{{ config.jena_tdb_directory }}"/>
				</div>
				<div class="form-group">
					<label for="http_url">http_url:</label>
					<input class="form-control" type="text" id="http_url" value="{{ config.http_url }}"/>
				</div>
				<div class="form-group">
					<label for="virtuoso_url">virtuoso_url:</label>
					<input class="form-control" type="text" id="virtuoso_url" value="{{ config.virtuoso_url }}"/>
				</div>
			<h3>Graphs</h3>
			<form role="form">
				<div class="form-group">
					<label for="revision_graph">Revision Graph:</label>
					<input class="form-control" type="text" id="revision_graph" value="{{ config.revision_graph }}"/>
				</div>
				<div class="form-group">
					<label for="sdd_graph">SDD Graph:</label>
					<input class="form-control" type="text" id="sdd_graph" value="{{ config.sdd_graph }}"/>
				</div>
				
				<button type="submit" class="btn btn-default">Update</button>
			</form>

		 </div>
		 <div class="row">
		 	<h2>Version</h2>
		 	{{#version}}Version: {{toString}}{{/version}}{{^version}}Git: {{git.commitIdAbbrev}} - {{git.branch}}{{/version}}
         </div>
  </div>
{{/content}}


